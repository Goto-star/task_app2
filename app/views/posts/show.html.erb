<div class="container">
    <h2>スケジュール詳細</h2>
    
    <table>
        <tr>
            <th>タイトル</th>
            <td><%= @post.title %></td>
        </tr>
        <tr>
            <th>開始日</th>
            <td><%= @post.start_day %></td>
        </tr>
        <tr>
            <th>投稿日時</th>
            <td><%= @post.posted_day %></td>
        </tr>
        <tr>
            <th>終日</th>
            <td>
                <% if @post.ckeckbox == true %>
                    ○
                <% else %>
                    -
                <% end %>
            </td>
        </tr>
        <tr>
            <th>スケジュールメモ</th>
            <td><%= @post.schedule_memo %></td>
        </tr>
    </table>
    
    <div>
        <ul>
            <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
        </ul>
    </div>
</div>