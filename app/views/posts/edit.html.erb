<h2>スケジュール編集</h2>

<%= form_with model: @post do |f| %>
<table>
    <tr>
        <th><%= f.label :title, "タイトル" %></th>
        <td><%= f.text_field :title %></td>
    </tr>
    <tr>
        <th><%= f.label :start_day, "開始日" %></th>
        <td><%= f.date_field :start_day %></td>
    </tr>
    <tr>
        <th><%= f.label :posted_day, "終了日" %></th>
        <td><%= f.date_field :posted_day %></td>
    </tr>
    <tr>
        <th><%= f.label :checkbox, "終日" %></th>
        <td><%= f.check_box :checkbox, {}, "1", "0" %></td>
        <br>終日の場合はチェックを入れます</br>
    </tr>
    <tr>
        <th><%= f.label :schedule_memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :schedule_memo %></td>
    </tr>
</table>
<div>
    <ul>
        <li><%= f.submit "スケジュールの編集を完了する" %></li>
        <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
</div>
<% end %>
